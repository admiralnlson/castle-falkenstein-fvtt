<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="ability-roll"></div>
    <div class="ability-level">{{localize 'castle-falkenstein.abilityLevelInSentence'}}</div>
    <div class="ability-name">{{localize 'castle-falkenstein.abilityNameInSentence'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create item" data-type="ability"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.add'}}</a>
    </div>
  </li>
  {{#each abilities as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="ability-roll">
        <a class="rollable" data-roll-type="item">ğŸ‘</a>
      </div>
      <div class="ability-level">
        {{localize item.data.levelI18nKey}}
      </div>
      <div class="ability-name">
        {{item.name}} [<span style="color:{{item.data.suitColor}}">{{item.data.suitSymbol}}</span>]
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>